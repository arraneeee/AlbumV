<Window x:Class="AlbumV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlbumV"
        xmlns:viewModel="clr-namespace:AlbumV.MVVM.ViewModel"
        mc:Ignorable="d"
        Title=""
        Height="800"
        Width="1040"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="False">

    <Window.DataContext>
        <viewModel:MainViewModel>

        </viewModel:MainViewModel>
    </Window.DataContext>

    <Border Background="#252525">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                    Background="#444444">
                <TextBlock Text="Album Rater"
                           Margin="0,25,0,0"
                           HorizontalAlignment="Center"
                           Foreground="#E8D8C3"
                           FontSize="22"
                        Height="29"
                        Width="121"/>
            </StackPanel>
            <StackPanel Grid.Row="1"
                    Background="#333333">
                <RadioButton Content="Home"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding HomeViewCommand}"/>
                <RadioButton Content="Upload"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding UploadViewCommand}"/>
            </StackPanel>
            <StackPanel Grid.Column="1"
                    Background="#555555">
                <TextBox Width="250"
                         Height="40"
                         Margin="0,17,0,0"
                         HorizontalAlignment="Left"
                         Grid.Column="1"
                         Style="{StaticResource ModernTextbox}"/>
            </StackPanel>
            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"/>

            <StackPanel Orientation="Horizontal"
                    Margin="0,10,0,0">
                <Button x:Name="playButton"
                        Content="▶"
                        Width="40"
                        Height="40"
                        IsEnabled="False"
                        Click="PlayButton_Click"
                        Margin="5,0,0,0"/>
                <Button x:Name="stopButton"
                        Content="■"
                        Width="40"
                        Height="40"
                        IsEnabled="False"
                        Click="StopButton_Click"
                        Margin="5,0,0,0"/>
            </StackPanel>

        </Grid>

    </Border>
</Window>
