<UserControl x:Class="AlbumV.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlbumV.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:HomeViewModel />
    </UserControl.DataContext>
    <StackPanel>
        <TextBlock Text="Albums"
                   Foreground="#E8D8C3"
                   FontSize="28"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="550">
            <ItemsControl ItemsSource="{Binding Albums}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="200"
                                Height="300"
                                Margin="40,10,20,0"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                Background="Gray">
                            <Border.Clip>
                                <RectangleGeometry Rect="0,0,200,300"/>
                            </Border.Clip>
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" Margin="10,215,10,0" TextAlignment="Center" Foreground="#E8D8C3"/>
                                    <TextBlock Text="{Binding Artist}" Margin="10,10,10,0" TextAlignment="Center" Foreground="#E8D8C3"/>
                                    <TextBlock Text="{Binding Rating}" Margin="10,10,10,0" TextAlignment="Center" Foreground="#E8D8C3"/>
                                    
                                    <!-- Add Play Button for Audio Clip -->
                                    <Button Width="30" 
                                            Height="30" 
                                            Margin="0,5,0,0" 
                                            ToolTip="Play Sound Clip"
                                            Visibility="{Binding HasAudioClip, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Command="{Binding DataContext.PlayAudioCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <Ellipse Fill="#4E4E4E" Stroke="#E8D8C3" StrokeThickness="1"/>
                                                    <Path Data="M 10,8 L 10,22 L 22,15 Z" Fill="#E8D8C3" Stretch="Uniform" Margin="3"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    
                                    <!-- Hidden MediaElement for Audio Playback -->
                                    <MediaElement x:Name="AudioPlayer" 
                                                  Source="{Binding AudioClipPath}" 
                                                  LoadedBehavior="Manual" 
                                                  Visibility="Collapsed"/>
                                </StackPanel>
                                <Border>
                                    <Border.Clip>
                                        <RectangleGeometry RadiusX="10"
                                                           RadiusY="10"
                                                           Rect="0,0,200,200"/>
                                    </Border.Clip>
                                    <Image Width="200"
                                           Height="200"
                                           Margin="0,0,0,100"
                                           Source="{Binding FilePath}"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</UserControl>