<UserControl x:Class="AlbumV.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlbumV.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:HomeViewModel />
    </UserControl.DataContext>
    <StackPanel>
        <TextBlock Text="Albums"
                   Foreground="#E8D8C3"
                   FontSize="28"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Albums}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="200"
                                Height="300"
                                Margin="5"
                                BorderBrush="Gray"
                                BorderThickness="1">
                            <Border.Clip>
                                <RectangleGeometry Rect="0,0,200,300"/>
                            </Border.Clip>
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" Margin="10,215,10,0" TextAlignment="Center" Foreground="#E8D8C3"/>
                                    <TextBlock Text="{Binding Artist}" Margin="10,10,10,0" TextAlignment="Center" Foreground="#E8D8C3"/>
                                    <TextBlock Text="{Binding Rating}" Margin="10,10,10,0" TextAlignment="Center" Foreground="#E8D8C3"/>
                                </StackPanel>
                                <Border>
                                    <Border.Clip>
                                        <RectangleGeometry RadiusX="10"
                                                           RadiusY="10"
                                                           Rect="0,0,200,200"/>
                                    </Border.Clip>
                                    <Image Width="200"
                                           Height="200"
                                           Margin="0,0,0,100"
                                           Source="{Binding FilePath}"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</UserControl>