<UserControl x:Class="AlbumV.MVVM.View.UploadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AlbumV.MVVM.View"
             xmlns:viewmodel="clr-namespace:AlbumV.MVVM.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="600"
        d:DesignWidth="800">
    <Canvas>

        <TextBlock Text="Upload"
                   Foreground="#E8D8C3"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Canvas.Left="355"
                   Canvas.Top="50"/>

        <TextBlock Text="Album Name"
                   Foreground="#E8D8C3"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   Canvas.Left="197"
                   Canvas.Top="158"
                   VerticalAlignment="Center"/>

        <TextBox Height="30"
                 Width="200"
                 Margin="155, 190, 0, 0"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="20"
                 Name="albumInput"/>

        <TextBlock Text="Artist Name"
                   Foreground="#E8D8C3"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   Canvas.Left="491"
                   Canvas.Top="158"
                   VerticalAlignment="Center"/>

        <TextBox Height="30"
                 Width="200"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="20"
                 Name="artistInput"
                 Canvas.Left="444"
                 Canvas.Top="190"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"/>

        <TextBlock Text="Rating"
                   Foreground="#E8D8C3"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   Canvas.Left="227"
                   Canvas.Top="251"/>

        <TextBox Height="30"
                 Width="200"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="20"
                 Name="ratingInput"
                 Canvas.Left="155"
                 Canvas.Top="285"/>

        <TextBlock Text="Image Link"
                   Foreground="#E8D8C3"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   Canvas.Left="496"
                   Canvas.Top="256"
                   VerticalAlignment="Center"/>

        <TextBox Height="30"
                 Width="200"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="20"
                 Name="imageInput"
                 Canvas.Left="444"
                 Canvas.Top="285"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"/>

        <TextBlock Text="Audio Clip (MP3, max 30 sec)"
                   Foreground="#E8D8C3"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   Canvas.Left="350"
                   Canvas.Top="335"/>

        <TextBox Height="30"
                 Width="200"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="20"
                 Name="audioInput"
                 Canvas.Left="300"
                 Canvas.Top="370"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"/>

        <Button Content="Browse..."
                Height="30"
                Width="60"
                Canvas.Left="510"
                Canvas.Top="370"
                Click="BrowseAudioClick"/>

        <Button Content="Test Play"
                Height="30"
                Width="80"
                Canvas.Left="300"
                Canvas.Top="410"
                Click="TestPlayClick"/>

        <RadioButton Content="Save Upload"
                     Height="50"
                     Background="#FFFCCC"
                     FontSize="25"
                     Cursor="Hand"
                     HorizontalContentAlignment="Center"
                     Style="{StaticResource MenuButtonTheme}"
                     Canvas.Left="329"
                     Canvas.Top="366"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Click="uploadClick"/>

        <ListView ItemsSource="{Binding Albums}"
                  SelectionChanged="ListView_SelectionChanged"
                  BorderThickness="0"
                  Background="Transparent">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background"
                            Value="Transparent"/>
                    <Setter Property="BorderThickness"
                            Value="0"/>
                    <Setter Property="Margin"
                            Value="5"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

    </Canvas>
</UserControl>